<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:scaleType="fitCenter"
        android:contentDescription="@string/listview_image"
        android:layout_weight="1"
        android:src="@drawable/ic_store_black_24dp"
        android:id="@+id/list_item_image_view"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/list_name_size"
            tools:text="@string/milansar"
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/list_location_size"
            tools:text="@string/rohini"
            android:id="@+id/text_view_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>